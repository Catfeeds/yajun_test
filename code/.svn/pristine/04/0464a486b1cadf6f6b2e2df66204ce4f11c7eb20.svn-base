<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<#include "../../include/editorCommons.html"> 
</head>	
<body style="overflow-y: hidden" scroll="no">
	<@p.editForm class="inputxtDisabled form-horizontal" idValue=role.id   permissionModule="ROLE">
		<@p.formRow>
			<@p.formColmd title="ROLE_CODE" permissionCode="ROLE_CODE">
				<input name="code" class="inputxt"   value="${role.code}">
			</@p.formColmd>
			<@p.formColmd title="ROLE_NAME" permissionCode="ROLE_NAME">
				<input name="name" class="inputxt"  value="${role.name}" >
			</@p.formColmd>
		</@p.formRow>
		<@p.formRow>
			<@p.formColmd title="ROLE_DESC" permissionCode="ROLE_DESC">
				<textarea name="desc" class="inputxt"   ignore="ignore" >${role.desc!}</textarea>
			</@p.formColmd>
		</@p.formRow>
	</@p.editForm>
	 <script>
	$(function(){
			$(".inputxtDisabled input,textarea").attr("readonly","true");
	});
</script> 
</body>
</html>