<#include "../../include/bootstrapTableCommons.html">

<@p.body title="LABEL_LIST_TITLE" permissionModule="LABEL" noBreadcrumbs="true">	
	<@p.searchPanel >
		<@p.searchColumns>
			<@p.input title="LABEL_EPC_ID" field="epcId" permissionCode="LABEL_EPC_ID"></@p.input>
			<@p.input title="LABEL_SALVER_NO" field="salverNo"  permissionCode="LABEL_SALVER_NO"></@p.input>
		</@p.searchColumns>
		<@p.toolbar> 
			<@p.button title="BTN_ADD" permissionCode="LabelManageAdd" iconCls="plus" url="${baseUrl}/tbLabelManage/addInput.do" type="add"  ></@p.button>
			<@p.button title="BTN_UPDATE" permissionCode="LabelManageUpdate" iconCls="edit" url="${baseUrl}/tbLabelManage/updateInput.do" type="update"></@p.button>
			<@p.button title="BTN_DELETE" permissionCode="LabelManageDelete"  iconCls="trash" url="${baseUrl}/tbLabelManage/delete.do"  type="delete"></@p.button>
		</@p.toolbar>
	</@p.searchPanel>
	<@p.dataGrid  url="${baseUrl}/tbLabelManage/list.do">
		<@p.column checkbox="true"></@p.column>
		<@p.column title="LABEL_LINE" field="tmLine.no" permissionCode="LABEL_LINE" formatter="renderLine"></@p.column>
		<@p.column title="LABEL_EPC_ID" field="epcId" permissionCode="LABEL_EPC_ID" ></@p.column>
		<@p.column title="LABEL_SALVER_NO" field="salverNo"   permissionCode="LABEL_SALVER_NO"></@p.column>
		<@p.column title="LABEL_BRAND" field="brand"   permissionCode="LABEL_BRAND"></@p.column>
		<@p.column title="LABEL_BATCH" field="batch"  permissionCode="LABEL_BATCH"></@p.column>
		<@p.column title="REMARKS" field="remarks"  permissionCode="LABEL_BATCH"></@p.column>
	</@p.dataGrid>
</@p.body>

<script type="text/javascript">
function renderLine(value,row,index){
	debugger;
	if(value){
		var name = row.tmLine.nameCn;
		return value+(name?"-"+name:"");
	}
	return "";
}
</script>
