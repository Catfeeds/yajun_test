		               t.shiftno as shiftNo,
		               to_char(t.work_date, 'yyyy-MM-dd') || ' ' || t.start_time as startTime,
		               case
		                 when t.end_time &lt; t.start_time then
		                  to_char(t.work_date + 1, 'yyyy-MM-dd') || ' ' || t.end_time
		                 else
		                  to_char(t.work_date, 'yyyy-MM-dd') || ' ' || t.end_time
		               END as endTime,
		               t.enabled as enabled,
		               t.plan_online_qty planOnlineQty, 
		               t.tm_line_id as tmLineId,
		               t.tm_plant_id as tmPlantId,
		               t.tm_class_manager_id as tmClassManagerId,
		               t.work_date as workDate
		          from tm_worktime t 
		          left join tm_line line on line.id = t.tm_line_id
